
public class Hello_08 {

	public static void main(String[] args) {

		int num1 = 30;
		System.out.println(num1);
		
		// 위에서 이미 선언된(어떤 값이 저장되어 있어도 상관 없이)
		// 변수 num1에 40을 저장하라(이미 저장된 값은 삭제된다)
		num1 = 40;
		
		// 정수형 어떤 값을 저장할 변수 num2를 선언한다.
		// 변수를 선언만 하는 명령문
		// 변수를 선언만 하는 명령문을 만나면
		// 기억장소를 검사하여 현재 사용하지 않는 장소를 찾고
		// 그 장소에 num2라는 이름을 붙인다.
		// num2 변수에는 어떤 값이 저장되 있을지 모른다.
		int num2 ;
		
		// num2에 어떤 값이 저장되어 있던 상관 없이
		// 삭제해 버리고 40을 저장한다.
		num2 = 40;
		
		/*
		 * int num3; >> 변수를 선언만 한 명령문
		 * 변수를 선언만 하면 변수에 어떤 값이 저장되어 있을수 있다.
		 * 때문에 선언만 된 변수를 읽을려고 시도를 하면
		 * 오류가 발생을 한다.
		 * 만약 아직 변수에 어떤 값을 저장할지 정해지 않았다면
		 * 변수를 초기화하는 것이 좋다.
		 */
		int num3 = 0; // 정수형변수 초기화
		System.out.println(num3);
		
		double num4 = 0.0; // 실수형변수 초기화
		String name1 = ""; // 문자열형변수 초기화
		
	}

}
